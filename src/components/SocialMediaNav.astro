---
import { Image } from "astro:assets";
import LogoX from "../assets/images/svg-x.svg";
import LogoYT from "../assets/images/svg-yt-fill.svg";
import LogoLN from "../assets/images/svg-ln.svg";
import LogoSP from "../assets/images/svg-sp.svg";
import LogoIG from "../assets/images/svg-ig.svg";
---

<div class="social-media-container">
  <div class="inner-container">
    <a href="http://www.x.com/somoswuru" target="_blank" title="X" rel="noopener noreferrer">
      <Image src={LogoX} alt="logo X" height={16} class="icon" style="animation-delay: 0.1s;" loading={"eager"} />
    </a>
    <a href="https://www.linkedin.com/company/wuru/" target="_blank" title="Linkedin" rel="noopener noreferrer">
      <Image src={LogoLN} alt="logo LN" height={18} class="icon" style="animation-delay: 0.2s;" loading={"eager"} />
    </a>
    <a href="https://open.spotify.com/show/4Y9ZWdptkgK77ggLblzG8G?si=f9148e7a834343ab" target="_blank" title="Spotify" rel="noopener noreferrer">
      <Image src={LogoSP} alt="logo SP" height={22} class="icon" style="animation-delay: 0.3s;" loading={"eager"} />
    </a>
    <a href="http://www.instagram.com/somoswuru" target="_blank" title="Instagram" rel="noopener noreferrer">
      <Image src={LogoIG} alt="logo IG" height={20} class="icon" style="animation-delay: 0.4s;" loading={"eager"} />
    </a>
    <a href="https://www.youtube.com/channel/UCL2wsaBCQbRUwFgd8S_3mWw" target="_blank" title="Youtube" rel="noopener noreferrer">
      <Image src={LogoYT} alt="logo YT" height={16} class="icon" style="animation-delay: 0.5s;" loading={"eager"} />
    </a>
  </div>
</div>

<script>
  const socialMediaContainer = document.querySelector(".social-media-container") as HTMLElement;
  const innerContainer = document.querySelector(".inner-container") as HTMLElement;

  const updateContainerWidth = () => {
    const parentElement = socialMediaContainer.parentElement;
    if (!parentElement) return;

    const bodyWidth = parentElement.offsetWidth;
    socialMediaContainer.style.width = `${bodyWidth}px`;
  };

  const handleScroll = () => {
    const scrollY = window.scrollY;
    const windowHeight = window.innerHeight;
    const documentHeight = document.body.scrollHeight;

    const currentScrollY = window.scrollY;
    const distanceFromBottom = documentHeight - (scrollY + windowHeight);

    if (currentScrollY < 400) {
      innerContainer.style.backgroundColor = "#1c1c1c00";
      innerContainer.style.border = "solid 0.5px #3a3a3a00";
      innerContainer.style.backdropFilter = "blur(0px)";
    } else {
      innerContainer.style.backgroundColor = "#1c1c1c63";
      innerContainer.style.border = "solid 0.5px #3a3a3a8b";
      innerContainer.style.backdropFilter = "blur(5px)";
    }

    if (distanceFromBottom <= 400) {
      innerContainer.style.opacity = "0";
      innerContainer.style.pointerEvents = "none";
      innerContainer.style.transform = "translateX(48px)";
    } else {
      innerContainer.style.opacity = "1";
      innerContainer.style.pointerEvents = "all";
      innerContainer.style.transform = "translateX(0px)";
    }
  };

  updateContainerWidth();
  handleScroll();
  window.addEventListener("resize", updateContainerWidth);
  window.addEventListener("scroll", handleScroll);
</script>

<style lang="scss">
  @keyframes icons-appears-nav {
    0% {
      opacity: 0;
      transform: translateX(20px);
    }
    50% {
      transform: translateX(-10px);
    }
    100% {
      transform: translateX(0px);
      opacity: 0.7;
    }
  }

  .social-media-container {
    z-index: 999;
    position: fixed;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    height: 85vh;
    max-height: 900px;
    padding-right: 60px;

    .inner-container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 32px;
      width: fit-content;
      padding: 8px;
      border-radius: 10px;
      height: 270px;
      overflow: hidden;
      opacity: 1;
      transition: all 0.3s ease-in-out;
      .icon {
        opacity: 0.5;
        animation: icons-appears-nav 0.5s ease-out forwards;
        transition: all 0.2s ease-in-out;
        cursor: pointer;

        &:hover {
          opacity: 1 !important;
          filter: drop-shadow(0 0 4px rgba(255, 255, 255, 0.66));
        }
      }
    }
  }

  @media only screen and (max-width: 1024px) {
    .social-media-container {
      display: none;
    }
  }

  @media only screen and (max-width: 768px) {
  }

  @media only screen and (max-width: 480px) {
  }
</style>
