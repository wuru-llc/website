---
import { Image } from "astro:assets";
import AnimatedItem from "../AnimatedItem.astro";

// Importa las im√°genes directamente para que Astro las gestione
import AunaLogo from "../../assets/images/auna-logo.png";
import AvidantiLogo from "../../assets/images/avidanti-logo.png";
import CAALogo from "../../assets/images/CAA-logo.png";
import CHSFLogo from "../../assets/images/CHSF-logo.png";
import CUNLogo from "../../assets/images/CUN-logo.png";
import FSFBLogo from "../../assets/images/FSFB-logo.png";
import GGLogo from "../../assets/images/GG-logo.png";
import HALogo from "../../assets/images/HA-logo.png";
import SMGLogo from "../../assets/images/SMG-logo.png";

const logos = [
  { src: AunaLogo, alt: "Auna Logo" },
  { src: AvidantiLogo, alt: "Avidanti Logo" },
  { src: CAALogo, alt: "CAA Logo" },
  { src: CHSFLogo, alt: "CHSF Logo" },
  { src: CUNLogo, alt: "CUN Logo" },
  { src: FSFBLogo, alt: "FSFB Logo" },
  { src: GGLogo, alt: "GG Logo" },
  { src: HALogo, alt: "HA Logo" },
  { src: SMGLogo, alt: "SMG Logo" },
];
---

<section class="social-proof-container" id="social-proof-container">
  <AnimatedItem animation="translateY(5px)">
    <div class="logo-track">
      {
        logos.map((logo) => (
          <div class="logo-slide">
            <Image class="client-logo" src={logo.src} alt={logo.alt} width={500} height={300} format="png" loading="lazy" />
          </div>
        ))
      }
      {
        logos.map((logo) => (
          <div class="logo-slide">
            <Image class="client-logo" src={logo.src} alt={logo.alt} width={500} height={300} format="png" loading="lazy" />
          </div>
        ))
      }
    </div>
  </AnimatedItem>
</section>

<style lang="scss">
  .social-proof-container {
    height: 250px;
    width: 100%;
    overflow: hidden;
    position: relative;
    align-content: center;
    border-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 1), rgba(0, 0, 0, 0)) 1;
  }

  .logo-track {
    display: flex;
    width: fit-content;
    animation: scroll 20s linear infinite;
  }

  .logo-slide {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 32px;
  }

  .client-logo {
    height: 50px;
    width: auto;
    opacity: 0.5;
    transition: opacity 0.5s ease;

    &:hover {
      opacity: 1;
    }
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media only screen and (max-width: 1024px) {
    .social-proof-container {
      height: 180px !important;
    }
  }
</style>
