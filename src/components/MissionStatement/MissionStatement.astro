---
import AnimatedItem from "../AnimatedItem.astro";
import ImageParallax from "../ImageParallax.astro";
---

<div class="social-proof-container">
  <div class="text-container">
    <AnimatedItem client:idle>
      <h1 class="text-1">Agilidad para</h1>
    </AnimatedItem>
    <AnimatedItem client:idle delay="0.5s">
      <h1 class="text-1">equipos de salud.</h1>
    </AnimatedItem>
    <AnimatedItem client:idle delay="1s">
      <h3 class="text-2">Liberamos su tiempo para que puedan dedicarlo a sus pacientes.</h3>
    </AnimatedItem>
  </div>
</div>

<style lang="scss">
  .social-proof-container {
    width: 100%;
    height: 80vh;
    max-height: 900px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    .text-container {
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      gap: 16px;

      z-index: 1;
      .text-1 {
        color: #f1f1f1;
        font-size: 96px;
        margin: 0;
        font-weight: 900;
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
      }
      .text-2 {
        color: #f1f1f1;
        opacity: 0.7;
        font-size: 32px;
        margin-top: 32px;
        font-weight: 400;
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
      }
    }
  }
</style>
