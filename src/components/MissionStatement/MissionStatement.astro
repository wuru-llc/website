---
import AnimatedItem from "../AnimatedItem.astro";
import ImageParallax from "../ImageParallax.astro";
import ImageParallax from "../ImageParallax.astro";
---

<div class="mision-statement-container">
  <div class="text-container">
    <AnimatedItem client:idle>
      <h1 class="text-1">Agilidad para</h1>
    </AnimatedItem>
    <AnimatedItem client:idle delay="0.5s">
      <h1 class="text-1">equipos de salud.</h1>
    </AnimatedItem>
    <AnimatedItem client:idle delay="1s">
      <h3 class="text-2">Liberamos su tiempo para que puedan dedicarlo a sus pacientes.</h3>
    </AnimatedItem>
  </div>
</div>

<style lang="scss">
  .mision-statement-container {
    width: 100%;
    height: 80vh;
    height: 80vh;
    max-height: 900px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 0px 48px;
    .text-container {
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      gap: 16px;

      z-index: 1;
      .text-1 {
        color: #f1f1f1;
        font-size: 96px;
        margin: 0;
        font-weight: 900;
        text-align: center;
        white-space: nowrap;
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
      }
      .text-2 {
        color: #f1f1f1;
        opacity: 0.7;
        font-size: 32px;
        margin-top: 32px;
        font-weight: 400;
        text-align: center;

        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
      }
    }
  }

  @media only screen and (max-width: 1024px) {
    .mision-statement-container {
      height: 60vh;

      padding: 0px 24px;

      .text-container {
        .text-1 {
          font-size: 72px;
        }
        .text-2 {
          font-size: 24px;
          text-align: center;
        }
      }
    }
  }

  @media only screen and (max-width: 768px) {
    .mision-statement-container {
      .text-container {
        .text-1 {
          font-size: 8vw !important;
        }
        .text-2 {
          margin-top: 20px;
          line-height: 24px;
          max-width: 70vw;
          font-size: 20px;
          text-align: center;
        }
      }
    }
  }

  @media only screen and (max-width: 480px) {
    .mision-statement-container {
      .text-container {
        .text-1 {
          font-size: 36px !important;
        }
        .text-2 {
          margin-top: 20px;
          line-height: 24px;
          font-size: 16px;
          text-align: center;
        }
      }
    }
  }
</style>
