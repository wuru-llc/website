---
import AnimatedItem from "../AnimatedItem.astro";
---

<div class="mision-statement-container">
  <div class="text-container">
    <AnimatedItem>
      <h1 class="text-1">La <span class="high">plataforma</span> para</h1>
    </AnimatedItem>
    <AnimatedItem delay="0.25s">
      <h1 class="text-1">equipos de salud <span class="high">ágiles.</span></h1>
    </AnimatedItem>
    <AnimatedItem delay="0.5s">
      <h1 class="text-2">Innovación siginificativa y transformación digital.</h1>
    </AnimatedItem>
  </div>
</div>

<style lang="scss">
  .mision-statement-container {
    width: 100%;
    height: 80vh;
    max-height: 900px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 0px 48px;
    overflow: hidden;
    .text-container {
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      gap: 16px;

      z-index: 1;
      .text-1 {
        color: #f1f1f191;
        font-size: 80px;
        margin: 0;
        font-weight: 900;
        text-align: center;
        white-space: nowrap;
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
        .high {
          color: #f1f1f1;
        }
      }
      .text-2 {
        color: #f1f1f1b5;
        font-size: 32px;
        margin: 0;
        margin-top: 40px;
        font-weight: 200;
        text-align: center;
        white-space: nowrap;
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
      }
    }
  }

  @media only screen and (max-width: 1024px) {
    .mision-statement-container {
      height: 50vh;

      padding: 0px 24px;

      .text-container {
        .text-1 {
          font-size: 60px;
        }
        .text-2 {
          font-size: 28px;
        }
      }
    }
  }

  @media only screen and (max-width: 768px) {
    .mision-statement-container {
      .text-container {
        .text-1 {
          font-size: 7.5vw !important;
        }
        .text-2 {
          font-size: 3.5vw;
          margin-top: 16px !important;
        }
      }
    }
  }

  @media only screen and (max-width: 480px) {
    .mision-statement-container {
      .text-container {
        .text-1 {
          font-size: 28px !important;
        }
      }
    }
  }
</style>
