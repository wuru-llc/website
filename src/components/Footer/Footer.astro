---
import { Image } from "astro:assets";

import WuruLogoFilled from "../../assets/images/wuru-logo-filled.svg";
import PinIcon from "../../assets/images/location.svg";
import LogoX from "../../assets/images/svg-x.svg";
import LogoYT from "../../assets/images/svg-yt-fill.svg";
import LogoLN from "../../assets/images/svg-ln.svg";
import LogoSP from "../../assets/images/svg-sp.svg";
import LogoIG from "../../assets/images/svg-ig.svg";
---

<script>
  document.querySelector(".subscribe-form")?.addEventListener("submit", (e) => {
    e.preventDefault();

    const emailInput = document.querySelector(".subscribe-input") as HTMLInputElement | null;

    if (emailInput) {
      const emailValue = emailInput.value.trim();

      if (!emailValue) {
        alert("El campo de correo electrónico no puede estar vacío.");
      } else if (!isValidEmail(emailValue)) {
        alert("Por favor, introduce un correo electrónico válido.");
      } else {
        alert(`¡Gracias por suscribirte, ${emailValue}!`);
        emailInput.value = "";
      }
    } else {
      console.error("El campo de entrada no se encontró.");
    }
  });

  const isValidEmail = (email: string): boolean => {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
  };
</script>

