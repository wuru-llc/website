---
import { Image } from "astro:assets";

import WuruLogoFilled from "../../assets/images/wuru-logo-filled.svg";
import LogoLN from "../../assets/images/svg-ln.svg";
import LogoIG from "../../assets/images/svg-ig.svg";
import Boston from "../../assets/images/boston-cientific.png";
import Microsoft from "../../assets/images/microsoft.png";
import Link from "../../assets/images/link.svg";
import Policy from "../../assets/images/privacy-policy-icon.svg";
import LogoNews from "../../assets/images/news.svg";
---

<div class="footer-container" id="footer-container">
  <div class="principal-data">
    <div class="part01">
      <Image src={WuruLogoFilled} alt="wuru-logo-filled" height={60} class="wuru-logo" loading={"lazy"} />
      <p class="vision">Salud de calidad accesible para todos</p>
    </div>
    <div class="part03">
      <span class="email-container">
        <p>escribinos</p>
        <a class="email-link" href="mailto:hola@wuru.ai" title="hola@wuru.ai" target="_blank" rel="noreferrer">hola@wuru.ai</a>
      </span>
      <span class="bottom">
        <p>seguinos</p>
        <div class="footer-social-media-container">
          <a href="https://www.linkedin.com/company/wuru/" target="_blank" title="Linkedin" rel="noopener noreferrer">
            <Image src={LogoLN} alt="logo LN" height={18} class="icon" style="animation-delay: 0.2s;" loading={"lazy"} />
          </a>
          <a href="http://www.instagram.com/somoswuru" target="_blank" title="Instagram" rel="noopener noreferrer">
            <Image src={LogoIG} alt="logo IG" height={20} class="icon" style="animation-delay: 0.4s;" loading={"lazy"} />
          </a>
          <a href="/signup" target="_blank" title="Onboarding" rel="noopener noreferrer">
            <Image src={LogoNews} alt="logo onboarding" height={20} class="icon" style="animation-delay: 0.6s;" loading={"eager"} />
          </a>
        </div>
      </span>
      <span class="documentos">
        <a class="docs-link" href="http://docs.wuru.ai" target="_blank" title="WÚRU DOCS" rel="noopener noreferrer">
          <p>wúru docs</p>
          <Image src={Link} alt="logo Link" height={20} class="icon" loading={"lazy"} />
        </a>
      </span>
      <span class="policy">
        <a class="docs-link" href="/privacy-policy" title="WÚRU PRIVACY POLICY" rel="noopener noreferrer">
          <p>Políticas de privacidad</p>
          <Image src={Policy} alt="logo policy" height={20} class="icon" loading={"lazy"} />
        </a>
      </span>
    </div>
  </div>
  <div class="partnership-container">
    <p>Nuestros socios estratégicos</p>
    <div class="images-container">
      <span class="boston"><Image src={Boston} height={75} alt="logo Boston Cientific" loading={"lazy"} /></span>
      <span class="microsoft"> <Image src={Microsoft} height={30} alt="logo Microsoft Partner" loading={"lazy"} /></span>
    </div>
  </div>

  <div class="line-container">
    <div class="line"></div>
  </div>
  <p class="copyright">Copyright © 2024 Wúru</p>

  <style lang="scss">
    @keyframes icons-appears {
      0% {
        opacity: 0;
        transform: translateY(20px);
      }
      50% {
        transform: translateY(-10px);
      }
      100% {
        transform: translateY(0px);
        opacity: 0.7;
      }
    }

    .footer-container {
      padding: 48px;
      padding-top: 64px;
      overflow: hidden;
      position: relative;
      z-index: 1;
      .principal-data {
        display: flex;
        justify-content: space-between;
        align-items: start;
        gap: 48px;
        .part01 {
          height: 100%;
          width: 100%;

          display: flex;
          flex-direction: column;
          gap: 16px;
          .vision {
            max-width: 350px;
            color: #f1f1f1;
            font-size: 28px;
            letter-spacing: 1.1px;
            margin: 0;
            font-weight: 900;
          }
        }

        .part03 {
          width: fit-content;
          height: 100%;
          display: flex;
          flex-direction: column;
          align-items: end;
          gap: 16px;
          font-size: 12px;
          letter-spacing: 1.1px;
          text-align: right;

          p {
            margin: 0;
            margin-bottom: 8px;
            text-transform: uppercase;
            color: #f1f1f1;
          }

          .docs-link {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 4px;
            transition: all ease-in-out 0.3s;
            cursor: pointer;

            p {
              margin: 0;
              white-space: nowrap;
            }
            &:hover {
              opacity: 0.7;
            }
          }
          .email-container {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: end;

            .email-link {
              color: #ff6344;
              font-size: 16px;
              transition: all ease-in-out 0.3s;

              &:hover {
                color: #dd593e;
              }
            }
          }
          .top {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: end;
            gap: 4px;
            .subscribe-form {
              display: flex;
              flex-direction: column;
              justify-content: end;
              align-items: end;
              gap: 12px;
              width: 100%;
              .subscribe-input {
                background: none;
                background-color: none;
                border: none;
                outline: none;
                border: solid 0.5px #f1f1f1;
                border-radius: 5px;
                width: 80%;
                max-width: 350px;
                padding: 4px 8px;
                background-color: #f1f1f122;
                color: #f1f1f1;
                transition: all ease-in-out 0.3s;

                &:focus {
                  outline: none;
                  background-color: #f1f1f13f;
                  border: solid 0.5px #dd593e;
                }
                &::placeholder {
                  font-size: 12px;
                  color: #f1f1f1;
                  opacity: 0.6;
                  letter-spacing: 1.1px;
                }
              }
              button {
                background: none;
                background-color: none;
                border: none;
                outline: none;
                background-color: #dd593ea7;
                color: #f1f1f1;
                border-radius: 5px;
                padding: 4px 12px;
                opacity: 1;
                transition: all ease-in-out 0.3s;
                cursor: pointer;

                &:hover {
                  background-color: #dd593e;
                }
              }
            }
          }
          .bottom {
            display: flex;
            flex-direction: column;
            align-items: end;
            gap: 4px;
            .footer-social-media-container {
              display: flex;
              align-items: center;
              gap: 32px;
              .icon {
                animation: icons-appears 0.5s ease-out forwards;
                transition: all 0.2s ease-in-out;
                cursor: pointer;
                &:hover {
                  opacity: 1 !important;
                  filter: drop-shadow(0 0 4px rgba(255, 255, 255, 0.66));
                }
              }
            }
          }
        }
      }
      .partnership-container {
        position: absolute;
        display: flex;
        flex-direction: column;
        align-items: center;
        top: 68px;
        left: 0;
        right: 0;
        gap: 16px;
        z-index: -1;
        p {
          margin: 0;
          margin-bottom: 16px;
          color: #f1f1f1;
          letter-spacing: 1.1px;
          text-transform: uppercase;
          font-size: 12px;
        }
        .images-container {
          display: flex;
          align-items: center;
          justify-content: center;
          gap: 64px;
          .boston {
            filter: grayscale(1) brightness(10);
          }
          .microsoft {
            background-color: #f1f1f1;
            padding: 24px;
            border-radius: 10px 10px 0px 10px;
          }
        }
      }
    }

    .line-container {
      margin-top: 24px;
      margin-bottom: 24px;
      .line {
        height: 0.5px;
        opacity: 0.2;
        width: 100%;
        border-radius: 0.5px;
        background-color: #f1f1f1;
      }
    }
    .copyright {
      width: 100%;
      text-align: center;
      font-size: 12px;
      margin: 0;
      color: #f1f1f1;
      opacity: 0.5;
      padding-bottom: 48px;
    }

    @media only screen and (max-width: 1024px) {
      *input {
        font-size: 16px;
      }
      .footer-container {
        padding: 24px !important;
        padding-top: 48px !important;

        .part01 {
          .vision {
            font-size: 28px !important;
          }
        }
        .part03 {
          .top {
            align-items: start !important;
            .subscribe-form {
              align-items: start !important;
              .subscribe-input {
                width: 100%;
              }
            }
          }
        }
        .partnership-container {
          position: unset !important;
          margin-top: 64px;
          align-items: center;
          gap: 8px;
          margin-bottom: 24px;
        }
      }
    }

    @media only screen and (max-width: 768px) {
      .footer-container {
        padding-top: 48px !important;
        .part01 {
          .vision {
            font-size: 24px !important;
            max-width: 300px;
          }
        }
        .partnership-container {
          position: unset !important;
          margin-top: 64px;
          align-items: center;
          gap: 0px;
        }
      }
    }

    @media only screen and (max-width: 480px) {
      .footer-container {
        flex-direction: column;

        .part03 {
          flex-direction: row;
          align-items: flex-start;
          justify-content: space-between !important;
          width: 100%;
          .email-container {
            align-items: flex-start;
            width: unset !important;
          }
          .top {
            .subscribe-form {
              .subscribe-input {
                width: 100% !important;
                max-width: unset !important;
              }
            }
          }
          .policy p {
            white-space: unset !important;
            min-width: 150px;
          }
        }
        .partnership-container {
          position: unset !important;
          margin-top: 48px;
          align-items: center;
          .images-container {
            gap: 24px;
            .boston {
              img {
                height: 50px;
                width: auto;
              }
            }
            .microsoft {
              padding: 16px;
              img {
                height: 20px;
                width: auto;
              }
            }
          }
        }
      }
    }
  </style>
</div>
