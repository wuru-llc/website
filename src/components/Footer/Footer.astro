      .bottom {
        .footer-social-media-container {
          display: flex;
          align-items: center;
          gap: 32px;
          .icon {
            animation: icons-appears 0.5s ease-out forwards;
            transition: all 0.2s ease-in-out;
            cursor: pointer;
            &:hover {
              opacity: 1 !important;
              filter: drop-shadow(0 0 4px rgba(255, 255, 255, 0.66));
            }
          }
