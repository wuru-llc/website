<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const links = document.querySelectorAll(".solutions-scroll-link");
    const sections = document.querySelectorAll("section");
    const buttonPill = document.querySelector(".button-pill");

    let isScrollingFromClick = false;
    let observer;

    function movePillTo(link) {
      const newLeft = link.offsetLeft;
      buttonPill.style.left = `${newLeft}px`;

      if (!buttonPill.classList.contains("visible")) {
        buttonPill.classList.add("visible");
      }
    }

    function setupObserver() {
      const observerOptions = {
        root: null,
        rootMargin: "0px",
        threshold: 0.8,
      };

      observer = new IntersectionObserver((entries) => {
        if (isScrollingFromClick) return;

        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const id = entry.target.id;

            if (id === "solutions-hero") {
              buttonPill.classList.remove("visible");
            } else {
              const activeLink = document.querySelector(`.solutions-scroll-link[data-target="${id}"]`);
              if (activeLink) {
                movePillTo(activeLink);
              }
            }
          }
        });
      }, observerOptions);

      sections.forEach((section) => observer.observe(section));
    }

    links.forEach((link) => {
      link.addEventListener("click", (e) => {
        e.preventDefault();
        isScrollingFromClick = true;
        movePillTo(link);

        // Navega y centra la sección en pantalla
        const targetId = link.getAttribute("data-target");
        const targetSection = document.getElementById(targetId);
        if (targetSection) {
          targetSection.scrollIntoView({ behavior: "smooth", block: "center" });
        }

        setTimeout(() => {
          isScrollingFromClick = false;
        }, 700);
      });
    });

    setupObserver();
  });

  // Infinite list effect
  const initInfiniteList = () => {
    const listContainer = document.getElementById("infinite-list");
    if (!listContainer) return;

    let cardCount = 0;

    const createCard = () => {
      const card = document.createElement("div");
      card.className = "card";

      const isCompact = window.innerWidth <= 1200;

      // Estilos inline necesarios para elementos dinámicos
      card.style.cssText = `
        background: #44444450;
        border: 1px solid #555;
        border-radius: 16px;
        padding: ${isCompact ? "12px" : "16px"};
        height: ${isCompact ? "40px" : "50px"};
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-shrink: 0;
        margin-bottom: 12px;
        opacity: 0;
        transform: translateY(100px);
        transition: all 0.4s ease;
        position: absolute;
        bottom: -100px;
      `;

      // Create data layout: multiple bars + dot
      const barsContainer = document.createElement("div");
      barsContainer.style.cssText = `
        display: flex;
        flex-direction: column;
        gap: 4px;
      `;

      // Create 2-3 bars stacked vertically
      const numBars = Math.floor(Math.random() * 2) + 2; // 2 or 3 bars
      for (let i = 0; i < numBars; i++) {
        const bar = document.createElement("div");
        bar.style.cssText = `
          height: 4px;
          background: #ec5a3d;
          border-radius: 2px;
          width: ${Math.floor(Math.random() * 60) + 40}px;
          opacity: ${0.4 + i * 0.3}; // Different opacity for each bar
        `;
        barsContainer.appendChild(bar);
      }

      const dot = document.createElement("div");
      dot.style.cssText = `
        width: 16px;
        height: 16px;
        background: #ff6b35;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 6px;
        color: white;
        font-weight: bold;
        transition: all 0.8s ease-in-out;
      `;

      // Animate dot color transitions and checkmark
      setTimeout(() => {
        dot.style.background = "#00bcd4"; // cyan
      }, 2500);

      setTimeout(() => {
        dot.style.background = "#4ade80"; // green
      }, 7000);

      setTimeout(() => {
        dot.innerHTML = "✓";
        dot.style.fontSize = "10px";
        dot.style.background = "#2d5a3d";
        dot.style.color = "#4ade80";
      }, 8500);

      card.appendChild(barsContainer);
      card.appendChild(dot);

      listContainer.appendChild(card);

      // Get container height to know when to remove cards
      const containerHeight = listContainer.clientHeight;

      // Animate existing cards up and check for removal
      const existingCards = listContainer.querySelectorAll(".card");
      existingCards.forEach((existingCard) => {
        if (existingCard !== card) {
          const currentBottom = parseInt(existingCard.style.bottom || "0");
          const newBottom = currentBottom + (isCompact ? 52 : 62); // Compact: 40px + 12px gap, Normal: 50px + 12px gap
          existingCard.style.bottom = `${newBottom}px`;

          // Remove card if it's moved completely out of view
          if (newBottom > containerHeight + 100) {
            setTimeout(() => {
              if (existingCard.parentNode) {
                existingCard.remove();
              }
            }, 400); // Wait for animation to complete
          }
        }
      });

      // Animate new card in from below
      setTimeout(() => {
        card.style.bottom = "0px";
        card.style.opacity = "1";
        card.style.transform = "translateY(0)";
      }, 100);

      cardCount++;
    };

    // Start infinite card generation when section comes into view
    const startInfiniteList = () => {
      let cardInterval;

      // Start with accelerated speed for first 3 seconds
      cardInterval = setInterval(() => {
        createCard();
      }, 200); // Accelerated: new card every 200ms (6x speed)

      // After 3 seconds, switch to normal speed
      setTimeout(() => {
        clearInterval(cardInterval);

        cardInterval = setInterval(() => {
          createCard();
        }, 1200); // Normal: new card every 1.2 seconds
      }, 3000);
    };

    // Observer to start when section is visible
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            startInfiniteList();
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.3 }
    );

    observer.observe(document.getElementById("qx-section"));
  };

  document.addEventListener("DOMContentLoaded", initInfiniteList);
</script>

